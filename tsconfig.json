{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",

  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["src/**/*.test.ts", "src/**/*.test.js"],

  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",

    "outDir": "./dist",
    "declaration": true,
    "allowJs": true,

    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
